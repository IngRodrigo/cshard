@model IEnumerable<CrudNetC5.Models.Libro>
@{
    ViewData["Title"] = "Lista de libros";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @if (TempData["mensaje"]!=null)
    {
        <div class="alert alert-warning alert-dismissible fade show" role="alert">
            @TempData["mensaje"];
            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }
    <div class="row">
        <div class="col-sm-6">
            <h3>Lista de Libros</h3>
        </div>
        <div class="col-sm-6">
            <a class="btn btn-success d-block" asp-action="Create" asp-controller="Libros">Agregar nuevo libro</a>
        </div>
    </div>
    <div class="row">
        @if (Model.Count()>0)//Si el modelo tiene al menos un registro
            {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>@Html.DisplayNameFor(modelo => modelo.Id)</td><!--Trae el titulo del campo seleccionado-->
                    <td>@Html.DisplayNameFor(modelo => modelo.Titulo)</td><!--Trae el titulo del campo seleccionado-->
                    <td>@Html.DisplayNameFor(modelo => modelo.Descripcion)</td><!--Trae el titulo del campo seleccionado-->
                    <td>@Html.DisplayNameFor(modelo => modelo.Fecha)</td><!--Trae el titulo del campo seleccionado-->
                    <td>@Html.DisplayNameFor(modelo => modelo.Autor)</td><!--Trae el titulo del campo seleccionado-->
                    <td>@Html.DisplayNameFor(modelo => modelo.precio)</td><!--Trae el titulo del campo seleccionado-->
                    <td>Acciones</td>
                </tr>
            </thead>

            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Titulo</td>
                        <td>@item.Descripcion</td>
                        <td>@item.Fecha</td>
                        <td>@item.Autor</td>
                        <td>@item.precio</td>
                        <td>
                            <a asp-controller="Libros" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Editar</a>
                            <a asp-controller="Libros" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
            }
            else
            {
                <p>No tenemos registros</p>
            }
    </div>
</div>